[Unit]
Description=Gunicorn instance to serve Negotiation Chat App
After=network.target

[Service]
User=rishi
Group=www-data
WorkingDirectory=/home/rishi/NC-FastAPI/backend
Environment="PATH=/home/rishi/anaconda3/envs/ncfastapi/bin"
ExecStart=/home/rishi/anaconda3/envs/ncfastapi/bin/gunicorn -b 127.0.0.1:8080 -w 1 -k uvicorn.workers.UvicornWorker main:app

[Install]
WantedBy=multi-user.target
